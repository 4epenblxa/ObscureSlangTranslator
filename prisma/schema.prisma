generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model moderators {
  id          Int          @id @default(autoincrement())
  user_id     Int          @unique
  promoted_by Int
  categories  categories[]
  staging     staging[]
  telemetry   telemetry[]
}

model obscure {
  id         Int          @id @default(autoincrement())
  term       String
  value      String
  author     String
  submitted  DateTime?    @default(now()) @db.Timestamp(6)
  synonyms   String[]
  staging    staging[]
  telemetry  telemetry[]
  categories categories[] @relation("category_to_obscure")
}

model staging {
  id          Int             @id @default(autoincrement())
  status      staging_status? @default(waiting)
  created     DateTime        @default(now()) @db.Timestamp(6)
  updated     DateTime        @default(now()) @db.Timestamp(6)
  term        String
  value       String
  author      String
  reviewed_by Int?
  accepted_as Int?
  obscure     obscure?        @relation(fields: [accepted_as], references: [id])
  moderators  moderators?     @relation(fields: [reviewed_by], references: [user_id])
}

model categories {
  id         Int        @id @default(autoincrement())
  value      String
  created    DateTime   @default(now()) @db.Timestamp(6)
  updated    DateTime   @default(now()) @db.Timestamp(6)
  author     Int
  moderators moderators @relation(fields: [author], references: [user_id])
  obscure    obscure[]  @relation("category_to_obscure")
}

model telemetry {
  id                Int         @id @default(autoincrement())
  requested_term_id Int
  author            String
  is_useful         Boolean?
  created           DateTime    @default(now()) @db.Timestamp(6)
  moderated_at      DateTime?   @db.Timestamp(6)
  moderated_by      Int?
  moderators        moderators? @relation(fields: [moderated_by], references: [user_id])
  obscure           obscure     @relation(fields: [requested_term_id], references: [id])
}

enum staging_status {
  waiting
  accepted
  declined
  request_changes
  synonym
}
